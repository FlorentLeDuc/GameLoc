{% extends 'parent.html.twig' %}


{% block body %}
<section class="decalnav home">
    <div class="overlay2">
        <h1>Créez votre annonce</h1>
        <div class="container">
                {{ form_row(Offer.title, {label: 'Le titre de votre annonce'}) }}
                {{ form_row(Offer.content, {label: 'Description'}) }}
                {{ form_row(Offer.picture, {label: 'une photo'}) }}
                {{ form_row(Offer.selling_price, {label: 'Prix vendu'}) }}
                {{ form_row(Offer.rent_price, {label: 'Prix loué'}) }}
                {{ form_row(Offer.statement, {label: 'Etat du produit'}) }}
