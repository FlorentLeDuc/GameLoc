{% extends 'parent.html.twig' %}

{% block title %}Hello SiteController!
{% endblock %}


{% block body %}
	<div class="main">
		<section class="sections home text-center">
			<div class="overlay">
				<div class="container">
					<div class="home-content">
						<h1 class="title" style="background-image: url({{ asset('uploads/images/giphy.gif') }})">GameLoc</h1>
						<h2 class="subheading">Bienvenue sur
							<span class="underline--magical">GameLoc</span>
							, si tu cherches à louer ou mettre à disposition des Jeux videos ou Jeux de sociétés, tu es au bon endroit.</h2>
						<buton>
								<a href="#savoirplus" class="btn button">EN SAVOIR PLUS</a>
							</buton>
							<buton>
                                <a href="{{ path('app_register') }}" class="btn button">CREER UN COMPTE</a>
                            </buton>
					</div>
					<a href="#scroll-btn">
      					<div id="savoirplus" class="scroll-down"></div>
   					 </a>
				</div>
			</div>
		</section>

		<section id="encoche" class="encoche">
			<div id="about" class="about">
				<h2 class="centre">Comment ça marche ?</h2>
				<div>
					<div class="images">
						<img id="cartes" src="{{ asset('uploads/images/unnamed.png') }}" alt="game">
						<img id="persos" src="{{ asset('uploads/images/persos.png') }}" alt="game">
					</div>
					<div class="etapes">
						<div class="etape">
							<h3>Etape 1</h3>
							<p>Inscrivez vous sur le site afin d'avoir accès à toutes les annonces ! </p>
						</div>
						<div class="etape">
							<h3>Etape 2</h3>
							<p>A ce stade vous pouvez parcourir les annonces pour y trouver ce que vous recherchez. Vous aurez également la possibilité d'en publier.</p>
						</div>
						<div class="etape">
							<h3>Etape 3</h3>
							<p>Maintenant c'est à vous, profitez de votre accès pour entrer en contact avec les utilisateurs du site !</p>
						</div>
						<div></div>
					</div>
				</div>
				<img id="plateaux" src="{{ asset('uploads/images/boards.png') }}" alt="game">
			</div>
		</section>
		<div  id ="scroll-btn" class="offer-index"></div>
		<h2>Un aperçu de nos offres !</h2>
		<table>
			<tbody>
				<section class= "decalnav">
					<div id ="scroll-btn" class="row justify-content-md-center">
					    {% for offer in offers %}
							<section class="cards_body">
								<div class="blog-post">
									<div class="blog-post_img">
										<img src="{{ asset('uploads/' ~ offer.picture) }}" alt="Lorem1">
									</div>
									<div class="blog-post_info"> 
										<div class="blog-post_date">
											<span>{{ offer.user.username }}</span>
											<span>{{ offer.publicationDate ? offer.publicationDate|date('Y-m-d H:i:s') : '' }}</span>
										</div> 
										<h1 class="blog-post_title">{{ offer.title }}</h1>
										<p>PRIX<i class="fas fa-euro-sign"></i></p>
										<p class="blog-post_text">{{ offer.category.title }}</p>
										<a href="{{ path('offer', {'id': offer.id}) }}" class="blog-post_cta">En savoir plus</a> 

									</div> 
								</div>
							</section>
							{# {% else %}
								<tr>
									<td colspan="9">no records found</td>
								</tr> #}
						{% endfor %}
					</div>
				</section>
			</tbody>
		</table>
	</div>
{% endblock %}
