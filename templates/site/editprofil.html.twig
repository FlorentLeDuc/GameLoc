        <div class="profile-nav col-md-3">
            <div class="panel">
                <div class="user-heading round">
                    <a href="#">
                        <img id="avatar" src="{{ asset('uploads/images/Avatar.png') }}" alt="avatar"></a>
                    </a>
                    <h1>{{ app.user.username }}</h1>
