{% extends 'parent.html.twig' %}

{% block title %}Hello SiteController!
{% endblock %}

{% block body %}
<section class="decalnav pad_offers">
<a class= "btn btnadmin bbtn" href="{{ path('createoffer') }}">Cr√©er une annonce</a>
	{% for offer in offers %}
		<section class="cards_body">
			<div class="blog-post">
				<div class="blog-post_img">
					<img src="{{ asset('uploads/' ~ offer.picture) }}" alt="Lorem1">
				</div>
				<div class="blog-post_info"> 
					<div class="blog-post_date">
						<span>{{ offer.user.username }}</span>
						<span>{{ offer.publicationDate ? offer.publicationDate|date('Y-m-d H:i:s') : '' }}</span>
					</div> 
					<h1 class="blog-post_title">{{ offer.title }}</h1>
					<p class=" blog-post_price">PRIX<i class="fas fa-euro-sign"></i></p>
					<p class="blog-post_text">{{ offer.category.title }}</p>
					<a href="{{ path('offer', {'id': offer.id}) }}" class="blog-post_cta">En savoir plus</a> 

				</div> 
			</div>
		</section>
	{% endfor %}
</section>
{% endblock %}
