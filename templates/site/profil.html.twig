	<div class="container bootstrap snippets bootdey decalnav">
<div class="row">
  <div class="profile-nav col-md-3">
      <div class="panel">
          <div class="user-heading round">
              <a href="#">
                  <img id="avatar" src="{{ asset('uploads/images/Avatar.png') }}" alt="avatar"></a>
              </a>
              <h1>{{ app.user.username }}</h1>
              <p>{{ app.user.email }}</p>
          </div>

          <ul class="nav nav-pills nav-stacked">
              <li class="active"><a href="#"> <i class="fa fa-user"></i> Profile</a></li>
              <li><a href="#"> <i class="fa fa-calendar"></i> Recent Activity <span class="label label-warning pull-right r-activity">9</span></a></li>
              <li><a href="{{ path('editprofil') }}"> <i class="fa fa-edit"></i> Edit profile</a></li>
          </ul>
      </div>
  </div>
  <div class="profile-info col-md-9">
      <div class="panel">
          <form>
              <textarea placeholder="Whats in your mind today?" rows="2" class="form-control input-lg p-text-area"></textarea>
          </form>
          <footer class="panel-footer">
              <button class="btn pull-right">Post</button>
          </footer>
      </div>
      <div class="panel">
          <div class="bio-graph-heading">
              Amateur de jeux videos en tout genre, je mets à disposition toutes ma collection de jeux videos.
          </div>
          <div class="panel-body bio-graph-info">
              <h1>Informations personnelles</h1>
              <div class="row">
                  <div class="bio-row">
                      <p><span>Prénom </span>: {{ app.user.username }}</p>
                  </div>
                  <div class="bio-row">
                      <p><span>Adresse </span>: {{ app.user.adress }}</p>
                  </div>
				  <div class="bio-row">
                      <p><span>Code Postal </span>: {{ app.user.zipcode }}</p>
                  </div>
                  <div class="bio-row">
                      <p><span>Email </span>: {{ app.user.email }}</p>
                  </div>
              </div>
          </div>
      </div>
      <div>
