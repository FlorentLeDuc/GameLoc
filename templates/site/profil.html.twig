{% extends 'parent.html.twig' %}

{% block title %}Profil de {{ app.user.username }}{% endblock %}

{% block body %}
	<div class="grix xs4 container">
		{% for message in app.flashes('message') %}
			<div class="col-xs4">
				<div class="p-3 my-2 rounded-2 success">{{message}}</div>
			</div>
		{% endfor %}
		<div class="col-xs4">
			<h1>Profil de {{ app.user.username }}</h1>
		</div>
		<div class="col-xs1">Email :</div>
		<div class="col-xs3">{{ app.user.email }}</div>
		<div class="col-xs4">
            {# <a href="{{ path('users_profil_modifier') }}" class="btn blue">Modifier le profil</a>
            <a href="{{ path('users_pass_modifier')}}" class="btn blue">Modifier le mot de passe</a>
            <a href="{{ path('users_data')}}" class="btn grey">Voir mes donn√©es personnelles (RGPD)</a> #}
        </div>

		<div class="col-xs4">
			<h1>Annonces de {{ app.user.username }} ({{ app.user.offers|length }})</h1>
		</div>
        {% for offer in app.user.offers %}
            <div class="col-xs1">Titre :</div>
            <div class="col-xs3">{{ offer.title }}</div>
        {% endfor %}
        
	</div>
{% endblock %}